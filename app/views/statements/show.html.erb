<div class="statement-controller" data-controller="btn-firstaidkit">

    <% if @current_question.nil? %>
      <% @first_aid_kits.each do |kit| %>

        <div class="toggling-btn">
          <button id ="btn1" class="btnicon" data-action="click->btn-firstaidkit#clickbtn" data-btn-firstaidkit-target="toggledbtn"><i class="fas fa-info"></i></button>
          <button id ="btn2" class="btnicon" data-action="click->btn-firstaidkit#clickbtn" data-btn-firstaidkit-target="toggledbtn2"><i class="far fa-comments"></i></button>
          <button id ="btn3" class="btnicon" data-action="click->btn-firstaidkit#clickbtn" data-btn-firstaidkit-target="toggledbtn3"><i class="fas fa-map-marked-alt"></i></button>
        </div>
          <div  data-btn-firstaidkit-target="content" >
            <div class="colourfull"><h5>What to do?</h5></div>
            <div class="fak-text"><p><%=kit.content.html_safe%></p> </div>
          </div>

          <div class="d-none" data-btn-firstaidkit-target="content2">
            <div class="colourfull"><h5>Talk about what happened with others</h5></div>
            <div class="fak-fora"><%= render "thread", forum_threads:  ForumThread.where(forum_category: kit.forum_category).paginate(per_page: 10, page: 1) %></div>
            <%# <div id="imagedoor"></div> %>
          </div>
          <div class="d-none" data-btn-firstaidkit-target="content3">
              <div class="colourfull"><h5>Find a specialist in your area</h5></div>
              <div id="map" class ="fak-maps"
                    style="width: 100%; height: 75vh;"
                    data-markers="<%= @markers.to_json %>"
                    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
              </div>
          </div>
      <% end %>
  <%else%>
      <% if @last_question.nil? %>
        <%= ""%>
      <% else %>
        <% @statement.possible_answers.each do |possible_answer| %>
          <div class="dropdown">
            <p class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <%= possible_answer.question.content%>
            </p>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
              <%= possible_answer.content%>
            </div>
          </div>
        <% end %>
      <% end %>
      <div class="card-asso">
        <h3><strong><%=@current_question.content%></strong></h3>
        <div data-controller="card-statement">
        <hr>
          <%= simple_form_for @answer,data:{card_statement_target:"form"} do |f| %>
            <%= f.hidden_field :statement_id, value: params[:id] %>
            <%= f.association :possible_answer, label_method: :content, collection: @current_question.possible_answers ,as: :radio_buttons, input_html: {class: "category-selector", data:{action:"click->card-statement#submitForm"}} %>
          <% end %>
        </div>
      </div>
  <% end %>
</div>
