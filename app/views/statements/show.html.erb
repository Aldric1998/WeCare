<div class="statement-controller" data-controller="btn-firstaidkit">

  <% if @current_question.nil? %>
    <% @first_aid_kits.each do |kit| %>

    <button id="btn1" data-action="click->btn-firstaidkit#clickbtn">What to do in your situation</button>
      <div class="fak-text" data-btn-firstaidkit-target="content" >
        <p><%=kit.content.html_safe%></p>
      </div>

    <button id="btn2" data-action="click->btn-firstaidkit#clickbtn">Fora</button>
      <div class="fak-fora d-none" data-btn-firstaidkit-target="content2">
          <p>to be announced</p>
      </div>
    <button id="btn3" data-action="click->btn-firstaidkit#clickbtn">Find</button>
      <div class="fak-maps d-none" data-btn-firstaidkit-target="content3">
          <div id="map"
                style="width: 100vw; height: 40vh;"
                data-markers="<%= @markers.to_json %>"
                data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
          </div>
      </div>
    <% end %>
    </div>
<%else%>
  <% if @last_question.nil? %>
    <%= ""%>
  <% else %>
    <% @statement.possible_answers.each do |possible_answer| %>
      <div class="dropdown">
        <p class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          <%= possible_answer.question.content%>
        </p>
        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
          <%= possible_answer.content%>
        </div>
      </div>
      <% end %>

  <% end %>
  <%=@current_question.content%>
  <%= simple_form_for @answer do |f| %>
    <%= f.hidden_field :statement_id, value: params[:id] %>

    <%= f.association :possible_answer, label_method: :content, collection: PossibleAnswer.where(question: @current_question),as: :radio_buttons, input_html: {class: "category-selector"} %>

    <%= f.button :submit %>
  <% end %>
<% end %>
